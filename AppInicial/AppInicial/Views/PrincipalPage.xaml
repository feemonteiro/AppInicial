<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInicial.Views.PrincipalPage">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Margin="5"
                Text="Cadastro"
                FontSize="Large" />
            <Entry 
                Placeholder="Nome"
                x:Name="nomePessoa"/>
            <Entry 
                Placeholder="CPF"
                x:Name="cpfPessoa"/>
            <Button
                Text="ADICIONAR"
                x:Name="btnAdicionar"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>